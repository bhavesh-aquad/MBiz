<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/id_card1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_180"
        android:layout_weight="1"
        android:elevation="@dimen/dim_10"
        app:cardElevation="@dimen/dim_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img2"
                android:scaleType="fitXY" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@drawable/transparent_strip"
                android:paddingBottom="@dimen/dim_10"
                android:paddingTop="@dimen/dim_10"
                android:gravity="center">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurant"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_marginTop="@dimen/dim_2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/dim_14" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</GridLayout>








