    <!--android:background="@drawable/home_screen_bg"-->

    <!--<include layout="@layout/toolbar" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/logout"
            android:layout_alignParentRight="true"
            android:text="@string/logout"
            android:textSize="@dimen/dim_14"
            android:textStyle="bold"
            android:textColor="@color/red"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/bt_magic_biz"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_20"
        android:src="@drawable/text"
        android:paddingRight="@dimen/dim_4"
        android:paddingLeft="@dimen/dim_4"
        android:gravity="center"
        android:textColor="@color/cyan" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_150"
        android:background="@drawable/slider_bg">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/background"/>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="@dimen/dim_5"
            app:centered="true"
            app:fillColor="#ff0099"
            app:pageColor="#FF0000"
            app:snap="false" />
    </RelativeLayout>


    <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/slider_img"/>-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim_10"
        android:paddingRight="@dimen/dim_10"
        android:paddingTop="@dimen/dim_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_32"
            android:background="@drawable/rect_shape">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="@dimen/dim_310"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dim_38"
                android:popupBackground="@drawable/style">
                <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Select Your Categories"
                android:paddingLeft="5dp"/>-->
           </Spinner>

            <ImageView
                android:id="@+id/id_divider"
                android:layout_width="@dimen/dim_3"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/spinner"
                android:paddingBottom="@dimen/dim_6"
                android:paddingTop="@dimen/dim_6"
                android:src="@drawable/divider" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_divider"
                android:gravity="center"
                android:padding="@dimen/dim_8">

                <ImageView
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:padding="@dimen/dim_4"
                    android:src="@drawable/search_icon" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_32"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/rect_shape">

            <LinearLayout
                android:id="@+id/llayout_locator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dim_5">

                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_30"
                    android:padding="@dimen/dim_3"
                    android:layout_gravity="center"
                    android:src="@drawable/locator" />
            </LinearLayout>

            <ImageView
                android:id="@+id/id_divider1"
                android:layout_width="@dimen/dim_2"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/llayout_locator"
                android:paddingBottom="@dimen/dim_3"
                android:paddingTop="@dimen/dim_3"
                android:src="@drawable/divider" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/id_divider1"
                android:background="@android:color/transparent"
                android:hint="Select Location"
                android:textColorHint="#800000"
                android:typeface="sans"
                android:textSize="@dimen/dim_16"
                android:cursorVisible="false"
                android:paddingLeft="@dimen/dim_6" />
        </RelativeLayout>

