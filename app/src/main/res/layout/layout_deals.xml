<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#25251d"
    android:orientation="vertical"
    tools:context="com.mbiz.DealsActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_2"
        android:layout_marginLeft="@dimen/dim_2"
        android:layout_marginRight="@dimen/dim_2"
        card_view:cardBackgroundColor="#1A1A14"
        card_view:cardElevation="@dimen/dim_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_5">

                <TextView
                    android:id="@+id/rest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dim_4"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dim_16"
                    android:typeface="serif" />

                <ImageView
                    android:id="@+id/mapicon"
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dim_3"
                    android:src="@drawable/map_icon" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_180"
                android:scaleType="fitXY"
                android:src="@drawable/img2" />


            <RelativeLayout
                android:id="@+id/lLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_5">

                <TextView
                    android:id="@+id/offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/gray"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_16" />

                <Button
                    android:id="@+id/btn_viewdeals"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/elliptical_shape"
                    android:drawableRight="@drawable/arrow_next"
                    android:padding="@dimen/dim_4"
                    android:text="View Deals"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_10"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/darkgray" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>