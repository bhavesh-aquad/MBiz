<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.mbiz.DealsActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_5"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_5"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/dim_3"
        card_view:cardElevation="@dimen/dim_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_10">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dim_120"
                android:layout_height="@dimen/dim_120"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img2" />

            <TextView
                android:id="@+id/rest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_toRightOf="@+id/imageView"
                android:textColor="@color/red"
                android:textSize="@dimen/dim_16"
                android:typeface="serif" />

            <TextView
                android:id="@+id/evening_dining"
                android:layout_width="@dimen/dim_90"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rest_name"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_6"
                android:layout_toRightOf="@+id/imageView"
                android:text="An Evening Dining..."
                android:textColor="@color/gray"
                android:textSize="@dimen/dim_10" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_1"
                android:layout_below="@+id/evening_dining"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_toRightOf="@+id/imageView"
                android:background="@color/darkgray" />

            <LinearLayout
                android:id="@+id/lLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_toRightOf="@+id/imageView"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/today_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:text="Today Offer"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dim_14"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_12"
                    android:layout_marginTop="@dimen/dim_5"
                    android:textColor="#FF00FF"
                    android:textSize="@dimen/dim_14" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_viewdeals"
                android:layout_width="@dimen/dim_80"
                android:layout_height="@dimen/dim_30"
                android:layout_below="@+id/lLayout"
                android:layout_marginBottom="@dimen/dim_5"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_toRightOf="@+id/imageView"
                android:background="@drawable/btn_shape_red"
                android:padding="@dimen/dim_3"
                android:text="View Deals"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_10"
                android:textStyle="bold"
                android:typeface="serif" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

